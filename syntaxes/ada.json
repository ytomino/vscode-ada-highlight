{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Ada",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#characters"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#replacedStrings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.double-dash.ada",
				"match": "--.*$"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ada",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"characters": {
			"patterns": [{
				"name": "string.quoted.single.ada",
				"match": "\\'.\\'"
			}]
		},
		"strings": {
			"name": "string.quoted.double.ada",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape.ada",
				"match": "\"\""
			}]
		},
		"replacedStrings": {
			"name": "string.quoted.other.ada",
			"begin": "%",
			"end": "%",
			"patterns": [{
				"name": "constant.character.escape.ada",
				"match": "%%"
			}]
		}
	},
	"scopeName": "source.ada"
}
